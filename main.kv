#:kivy 1.9.1
#: import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter

<ConnectingScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'SMDS'
                    with_previous: False
                    app_icon: 'assets/smds-logo.png'
                    app_icon_height: 48
                    app_icon_width: 48
                ActionOverflow:
                ActionButton:
                    text: 'Settings'
                    on_press: root.open_settings()
        Label:
            id: connecting_label
            markup: True
            halign: 'center'
            text_size: self.size
            valign: 'middle'
            text: 'Connecting to MySMDS...'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'SMDS'
                    with_previous: False
                    app_icon: 'assets/smds-logo.png'
                    app_icon_height: 48
                    app_icon_width: 48
                ActionOverflow:
                ActionButton:
                    text: 'PRN'
                    on_press: root.open_prn_medications()
                ActionButton:
                    text: 'History'
                    on_press: root.open_history()
                ActionSeparator:
                ActionButton:
                    text: 'Settings'
                    on_press: root.open_settings()
        Label:
            id: dispense_label
            markup: True
            halign: 'center'
            text_size: self.size
            valign: 'middle'
        Button:
            id: dispense_button
            size: (20, 20)
            text: "Dispense"
            size_hint: (1, 0.3)
            on_press: root.dispense_clicked()

[HistoryEntry@BoxLayout]:
    orientation: 'vertical'
    padding: 16
    Label:
        text: ctx.entry.title
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        bold: True
    Label:
        text: ctx.entry.status_text()
        color: ctx.entry.get_color()
        halign: 'left'
        valign: 'middle'
        text_size: self.size

<HistoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'SMDS - History'
                    with_previous: True
                    app_icon: 'assets/smds-logo.png'
                    app_icon_height: 48
                    app_icon_width: 48
                    on_press: root.open_home()

        ListView:
            id: list_view
            adapter:
                SimpleListAdapter(data=root.history, template='HistoryEntry', args_converter=root.data_converter)

[PRNMedication@BoxLayout]:
    orientation: 'horizontal'
    padding: 16
    height: 240
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: ctx.medication.medication.title
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            bold: True
            size_hint: (1, 0.2)
        Label:
            text: ctx.medication.get_description()
            markup: True
            halign: 'left'
            valign: 'top'
            text_size: self.size
            size_hint: (1, 0.8)
    Button:
        id: dispense_button
        size: (20, 20)
        size_hint: (0.4, 1)
        text: "Dispense"
        on_press: ctx.dispense_callback()

<PRNMedications>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'SMDS - PRN medications'
                    with_previous: True
                    app_icon: 'assets/smds-logo.png'
                    app_icon_height: 48
                    app_icon_width: 48
                    on_press: root.open_home()

        ListView:
            id: list_view
            adapter:
                SimpleListAdapter(data=root.medications, template='PRNMedication', args_converter=root.convert_data)
