#:kivy 1.0

<ConnectingScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'SMDS'
                    with_previous: False
                    app_icon: 'assets/smds-logo.png'
                    app_icon_height: 48
                    app_icon_width: 48
        Label:
            id: connecting_label
            markup: True
            halign: 'center'
            text_size: self.size
            valign: 'middle'
            text: 'Connecting to MySMDS...'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'SMDS'
                    with_previous: False
                    app_icon: 'assets/smds-logo.png'
                    app_icon_height: 48
                    app_icon_width: 48
        Label:
            id: dispense_label
            markup: True
            halign: 'center'
            text_size: self.size
            valign: 'middle'
        Button:
            id: dispense_button
            size: (20, 20)
            text: "Dispense"
            on_press: root.dispense_clicked()